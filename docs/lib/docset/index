[% TAGS star -%]
[% META book = ''
        page = ''
%]

[* docset.intro *]

[% WRAPPER ndx -%]
[*  FOREACH book = docset.books -*]
[% WRAPPER ndxitem 
     link='[* book.pages.size == 1 
	        ? book.pages.0.html : "$book.html/index.html" *]'
     name='[* book.name *]'
     title='[* book.about *]'
-%]
[* book.intro *]
[% END %]
[* END *]
[% END %]
